<table class="table table-striped table-hover table-condensed">
  <tr>
    <th>Name</th>
    <td><%= competition.name %></td>
  </tr>
  <tr>
    <th>City / Country</th>
    <td><%= "#{competition.city} / #{competition.country}" %></td>
  </tr>
  <tr>
    <th>ISU Site</th>
    <td><%= link_to("ISU HP", competition.isu_site) %></td>
  </tr>
  <tr>
    <th>Start Date</th>
    <td><%= competition.start_date %></td>
  </tr>
  <tr>
    <th>End Date</th>
    <td><%= competition.end_date %></td>
  </tr>
  <tr>
    <th>Categories</th>
    <td><% competition.category_ranks.select(:category).distinct.each  do |rel| %>
      <%= link_to(rel.category, url_for(:competitions, :id, id: competition.id, category: rel.category)) + ", " %>
      <% end %>
    </td>
  </tr>
</table>
