<h2>Competition List</h2>

<table class="table table-striped table-hover table-condensed">
  <tr>
    <th>ID</th>
    <th>Competition</th>
    <th>City / Country</th>
    <th>ISU Site</th>
    <th>Start Date</th>
    <th>End Date</th>
  </tr>
  <% competitions.each do |competition| %>
  <tr>
    <td><%= competition.id %></td>
    <td><%= link_to(competition.name, url_for(:competitions, :id, id: competition.id)) %></td>
    <td><%= competition.city %> / <%= competition.country %></td>
    <td><%= link_to("ISU HP", competition.isu_site) %></td>
    <td><%= competition.start_date %></td>
    <td><%= competition.end_date %></td>
  </tr>
  <% end %>
</table>
