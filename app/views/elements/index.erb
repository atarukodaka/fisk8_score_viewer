

<% form_tag(url_for(:elements, :list), method: 'post') do %>
<div class="form-group row">
  <div class="col-sm-2">
    <%= label_tag(:element) %>
  </div>
  <div class="col-sm-6">
    <%= text_field_tag(:element, :class=>"form-control", value: params[:element]) %>
  </div>
  <div class="col-sm-4">
    partial match: <%= check_box_tag(:partial_match, :class=>"form-check-input", checked: params[:partial_match].present?) %>
  </div>
</div>

<%= partial :select_form, locals: {tag: :skater_name,
    options: Skater.select(:name).order(:name).map(&:name)} %>
<%= partial :select_form, locals: {tag: :category,
    options: Score.select(:category).distinct.order(:category).map(&:category)} %>
<%= partial :select_form, locals: {tag: :segment,
    options: Score.select(:segment).distinct.order(:segment).map(&:segment)} %>
<%= partial :select_form, locals: {tag: :nation,
    options: Score.select(:nation).distinct.order(:nation).map(&:nation)} %>
<%= partial :select_form, locals: {tag: :competition_name,
    options: Competition.order("start_date DESC").map(&:name)} %>
<%= partial :select_form, locals: {tag: :format, options: ['html', 'csv']} %>

<%= partial :submit_form %>
<% end %>


<% limit = settings.config[:list][:limit] || 20 %>
<% page = (params[:page].presence || 1).to_i %>
<% elements_limitted = elements.limit(limit).offset((page-1)*limit) %>

<table class="table table-striped table-hover table-condensed">
  <tr>
    <th>Score ID</th>
    <th>Skater</th>
    <th>Competition</th>
    <th>Category</th>
    <th>Segment</th>
    <th>Date</th>    
    <th>Number</th>
    <th>Info</th>
    <th>Element</th>
    <th>Credit</th>
    <th>BV</th>
    <th>GOE</th>
    <th>Judges</th>
    <th>Score</th>
  </tr>
</td>
  <% elements_limitted.each do |element| %>
  <% score = element.score %>
  <tr>
    <td><%= link_to(score.id, url_for(:scores, :id, id: score.id)) %></td>
    <td><%= score.skater.name %></td>
    <td><%= score.competition_name %></td>
    <td><%= score.category %></td>
    <td><%= score.segment %></td>
    <td><%= score.starting_time.try(:strftime, "%Y-%m-%d") %></td>
    <td><%= element.number %></td>
    <td><%= element.info %></td>
    <td><%= element.element %></td>
    <td><%= element.credit %></td>
    <td><%= element.base_value %></td>
    <td><%= element.goe %></td>
    <td><%= element.judges %></td>
    <td><%= element.value %></td>
  </tr>
  <% end %>
</table>

<%= partial 'pagination', locals: {records: elements, controller: :elements, page: page} %>

