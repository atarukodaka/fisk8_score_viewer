<ul class="nav nav-tabs">
  <li class=active> <%= link_to tag_icon(:list, pat(:list)), url(:scores, :index) %></li>
  <li> <%= link_to tag_icon(:plus, pat(:new)), url(:scores, :new) %></li>
</ul>
<div class=tabs-content>
  <table id=list class="table table-striped table-hover table-condensed">
    <thead>
      <tr>
        <th class="header list-menu">
          <div class=dropdown>
            <a href="#" class="list-menu-toggle dropdown-toggle" data-toggle='dropdown'>
              <%= tag_icon :magic %> <span class=caret></span>
            </a>
            <ul class="list-menu dropdown-menu" role=menu>
              <li class=list-menu-wrapper>
                <%= link_to tag_icon('check-square-o', pat(:select_all)), '#', :id => 'select-all', :class => 'list-menu-link' %>
              </li>
              <li class=list-menu-wrapper.list-menu-wrapper-disabled>
                <%= link_to tag_icon('square-o', pat(:deselect_all)), '#', :id => 'deselect-all', :class => 'list-menu-link list-menu-link-disabled' %>
              </li>
              <li class="list-menu-divider divider"></li>
              <li class=list-menu-wrapper.list-menu-wrapper-disabled>
                <%=link_to tag_icon('trash-o', pat(:delete_selected)), '#', :id => 'delete-selected', :class => 'list-menu-link list-menu-link-disabled' %>
                <div class='list-menu-popover-delete-selected popover right'>
                  <div class=arrow></div>
                  <h3 class=popover-title><%= pat(:delete_selected_title) %></h3>
                  <div class=popover-content>
                    <% form_tag url(:scores, :destroy_many), :method => :delete do %>
                      <%=hidden_field_tag :score_ids, :'data-delete-many-ids' => true %>
                      <%=submit_tag pat(:delete), :class =>'list-menu-popover-delete-selected-btn btn btn-danger btn-small' %>
                      <div class='btn btn-default btn-small cancel'><%= pat(:cancel) %></div>
                    <% end %>
                  </div>
                </div>
              </li>
            </ul>
          </div>
        </th>
                <th class=header> <%= mat(:score, :id) %></th>
                <th class=header> <%= mat(:score, :skater) %></th>
                <th class=header> <%= mat(:score, :rank) %></th>
                <th class=header> <%= mat(:score, :starting_number) %></th>
                <th class=header> <%= mat(:score, :nation) %></th>
                <th class=header> <%= mat(:score, :competition_name) %></th>
                <th class=header> <%= mat(:score, :category) %></th>
                <th class=header> <%= mat(:score, :segment) %></th>
                <th class=header> <%= mat(:score, :date) %></th>
                <th class=header> <%= mat(:score, :isu_result) %></th>
                <th class=header> <%= mat(:score, :tss) %></th>
                <th class=header> <%= mat(:score, :tes) %></th>
                <th class=header> <%= mat(:score, :pcs) %></th>
                <th class=header> <%= mat(:score, :deductions) %></th>
                <th class=header> <%= mat(:score, :technicals_summary) %></th>
                <th class=header> <%= mat(:score, :components_summary) %></th>
                <th class=header> <%= mat(:score, :created_at) %></th>
                <th class=header> <%= mat(:score, :updated_at) %></th>
                <th class=header> <%= mat(:score, :competition_id) %></th>
                <th class="header list-row-action-header"></th>
      </tr>
    </thead>

    <tbody>
      <% @scores.each do |score| %>
        <tr class=list-row>
          <td class="list-column list-selectable">
            <%= check_box_tag 'score_ids[]', :value => score.id, :class => 'list-selectable-checkbox' %>
           </td>
          <td class=list-column> <%= score.id %> </td>
          <td class=list-column> <%= score.skater %> </td>
          <td class=list-column> <%= score.rank %> </td>
          <td class=list-column> <%= score.starting_number %> </td>
          <td class=list-column> <%= score.nation %> </td>
          <td class=list-column> <%= score.competition_name %> </td>
          <td class=list-column> <%= score.category %> </td>
          <td class=list-column> <%= score.segment %> </td>
          <td class=list-column> <%= score.date %> </td>
          <td class=list-column> <%= score.isu_result %> </td>
          <td class=list-column> <%= score.tss %> </td>
          <td class=list-column> <%= score.tes %> </td>
          <td class=list-column> <%= score.pcs %> </td>
          <td class=list-column> <%= score.deductions %> </td>
          <td class=list-column> <%= score.technicals_summary %> </td>
          <td class=list-column> <%= score.components_summary %> </td>
          <td class=list-column> <%= time_ago_in_words score.created_at %></td>
          <td class=list-column> <%= time_ago_in_words score.updated_at %></td>
          <td class=list-column> <%= score.competition_id %> </td>
          <td class="list-column list-row-action">
            <div class='list-row-action-wrapper'>
               <%= link_to tag_icon(:edit), :href => url(:scores, :edit, :id => score.id), :rel => :tooltip, :title => "#{pat(:edit)} score", :class => 'list-row-action-wrapper-link' %>
               <%= link_to tag_icon('trash-o'), :rel => :tooltip, :title => "#{pat(:delete)} score", :class => 'list-row-action-delete-one list-row-action-wrapper-link' %>
               <div class="popover list-row-action-popover-delete-one left">
                 <div class=arrow> </div>
                 <h3 class=popover-title><%= pat(:delete, :model => "score") %></h3>
                 <div class=popover-content>
                   <% form_tag url(:scores, :destroy, :id => score.id), :method => :delete do %>
                     <%= submit_tag pat(:delete), :class =>'list-row-action-popover-delete-one-btn btn btn-danger btn-small' %>
                     <div class="btn btn-default btn-small cancel"><%= pat(:cancel) %></div>
                   <% end %>
                 </div>
               </div>
             </div>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
